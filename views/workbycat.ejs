<% include ./partial/head %>
<div class="row">
    <div class="col-sm-8">
      <% work.forEach(function(work){ %>

      <div class="row">
        <div class="col-sm-4">
          <img src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" width="150" height="150" class="float-right"/>
        </div>
        <div class="col-sm-8">
          <p><b>Name:<%= work.username %></b></p>
          <p><b>Area:<%= work.address %></b></p>
          <p><b>Work:<%= work.work %></b></p>
          <p><b>Phone:  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Show
          </button></b></p>
        </div>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Phone Number</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= work.number %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>    </div></div>



<!-- Modal -->


</ul>
